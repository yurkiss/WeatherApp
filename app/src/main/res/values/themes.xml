<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlanRadarWeatherApp" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="Theme.PlanRadarWeatherApp" parent="Base.Theme.PlanRadarWeatherApp">
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.PlanRadarWeatherApp.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.PlanRadarWeatherApp</item>
    </style>

</resources>

